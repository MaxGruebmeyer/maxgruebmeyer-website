<!-- TODO (GM): Centralize Title? -->
@{
    ViewData["Title"] = "Max Gruebmeyer - Utility";
}

<div>
<div class="mx-auto max-w-2xl lg:mx-0">
    <h2 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">Utility</h2>
    <p class="mt-6 text-lg leading-8 text-gray-700 dark:text-gray-300">
    Here you can find some tools & quick links to make your daily life as
    a student & developer easier.
    </p>
</div>

<!-- TODO (GM): Highlight cards when hovering! -->
<div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-6 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8">
    @foreach (UtilLink link in @Model.UtilLinks)
    {
    <div class="flex gap-x-4 rounded-xl bg-gray-200/5 dark:bg-white/5 p-6 ring-1 ring-inset ring-gray-500/10 dark:ring-white/10">
        <svg class="h-7 w-5 flex-none text-indigo-500 dark:text-indigo-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M2 3.5A1.5 1.5 0 013.5 2h9A1.5 1.5 0 0114 3.5v11.75A2.75 2.75 0 0016.75 18h-12A2.75 2.75 0 012 15.25V3.5zm3.75 7a.75.75 0 000 1.5h4.5a.75.75 0 000-1.5h-4.5zm0 3a.75.75 0 000 1.5h4.5a.75.75 0 000-1.5h-4.5zM5 5.75A.75.75 0 015.75 5h4.5a.75.75 0 01.75.75v2.5a.75.75 0 01-.75.75h-4.5A.75.75 0 015 8.25v-2.5z" clip-rule="evenodd" />
            <path d="M16.5 6.5h-1v8.75a1.25 1.25 0 102.5 0V8a1.5 1.5 0 00-1.5-1.5z" />
        </svg>
        <a href="@link.Target" target="_blank">
            <div class="text-base leading-7">
                <h3 class="font-semibold text-gray-800 dark:text-white">@link.Name</h3>
                <p class="mt-2 text-gray-700 dark:text-gray-300">@link.Description</p>
            </div>
        </a>
    </div>
    }
</div>
